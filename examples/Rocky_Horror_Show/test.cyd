[[ 

DECLARE 0 AS Contador         /* DEFINE CONTADOR Y LO PONE A CERO */
SET Contador TO 0 

PICTURE 1 : DISPLAY 1         /* CARGA Y MUESTRA IMAGEN DE LA CASA */  
PICTURE 2                     /* CARGA EN BUFFER DE MEMORIA IMAGENES DE RAYO Y VENTANA */

LABEL start                   /* INICIO DE SECUENCIA */

SET Contador TO 0             /* PONE CONTADOR BUCLE WHILE A CERO */
WHILE (@Contador < 100)       /* DURACION RAYO IZQUIERDO */
BLIT 6,0,7,7 AT 6,0           /* DIBUJA RAYO IZQUIERDA */
BLIT 12,10,2,2 AT 9,10        /* DIBUJA FORMA HUMANA EN VENTANA */
BLIT 13,0,7,7 AT 6,0          /* BORRA RAYO IZQUIERDA */
SET Contador TO @Contador + 1 /* INCREMENTA CONTADOR */
WEND
BLIT 9,10,2,2 AT 9,10         /* RESTAURA VENTANA AMARILLA */

WAIT 100                      /* TIEMPO DE ESPERA ENTRE RAYOS */

SET Contador TO 0             /* PONE CONTADOR BUCLE WHILE A CERO */
WHILE (@Contador < 50)        /* DURACION RAYO DERECHO */
BLIT 24,0,5,8 AT 24,0         /* DIBUJA RAYO DERECHA */
BLIT 12,10,2,2 AT 9,10        /* DIBUJA FORMA HUMANA EN VENTANA */
BLIT 13,0,5,8 AT 24,0         /* BORRA RAYO DERECHA */
SET Contador TO @Contador + 1 /* INCREMENTA CONTADOR */
WEND
BLIT 9,10,2,2 AT 9,10         /* RESTAURA VENTANA AMARILLA */

WAIT 100                      /* TIEMPO DE ESPERA ENTRE RAYOS */

GOTO start                    /* REPITE TODA LA SECUENCIA INDEFINIDAMENTE */
]]